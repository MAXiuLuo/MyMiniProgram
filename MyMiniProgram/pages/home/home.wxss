.banner {
  width: 100%;
  height: 400rpx;
}

.m-menu {
  display: flex;
  flex-flow: row nowrap;
  height: 161rpx;
  width: 750rpx;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.m-menu .item {
  height: 161rpx;
  flex: 1;
  display: block;
}

.m-menu image {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-top: 32rpx;
}

.m-menu text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}

.menus{
  height: 181rpx;
  width: 750rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.items{
  height:200rpx;
  width:49%;
  display:inline-block;
  text-align:center;
  margin: 1rpx;
  background-color: #a39b8d;
}

.items-right{
  height:200rpx;
  width:49%;
  display:inline-block;
  text-align:center;
  border-top: 1px solid #333;
}

.items image {
  display: block;
  width: 100%;
  height: 75%;
  margin: 0 auto;
  
}

.items text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}

