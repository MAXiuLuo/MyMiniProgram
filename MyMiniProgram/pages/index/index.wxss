/**index.wxss**/
.container{
  background-color:  #f4f4f4;
  width: 100%;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #333
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 10rpx;
  margin-bottom: 50px;
}


.item image {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-top: 32rpx;
}

.item text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}



.fome-userinfo{
  border-bottom: 1rpx solid #333;
  height: 78rpx;
  position: relative;
  background: #ffffff;
}

.btn{
  display:  flex;
  flex-direction: row;
  margin-top: 10rpx
}

.btn .b{
  margin: 10rpx;
}

.items{
  height:200rpx;
  width:100%;
  margin: 1rpx;
  background-color: #a39b8d;
}

.items-right{
  height:200rpx;
  width:49%;
  display:inline-block;
  text-align:center;
  border-top: 1px solid #333;
}

.items image {
  display: block;
  width: 100%;
  height: 75%;
  margin: 0 auto;
  
}

.items text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}